.panel.panel-primary
    .panel-heading
        .panel-title Rename or delete files, tap Done when completed
    ul.list-group
        li.list-group-item(ng-repeat='file in playlistfiles')
            span(ng-if="file.filename == 'default'", ng-bind="file.filename")
            form.row(ng-if="file.filename != 'default'", name="playlisteditform")
                .form-group
                    .input-group.col-xs-10
                        input.form-control(type='text', ng-model='file.filename', name="{{file.filename}}")
                        span.input-group-btn(title='Rename {{file.filename}}', ng-click='rename(file.filename, $index)', ng-show="playlisteditform.$dirty")
                            btn.btn.btn-sm(type="button") Go!
                    span.col-xs-2(title='Delete {{file.filename}}')
                        a.glyphicon.glyphicon-remove.btn-link(type='button', ng-click='delete(file.filename)', style='vertical-align:middle')
