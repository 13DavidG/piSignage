.panel.panel-primary
    .panel-heading
        .panel-title Rename or delete files, tap Done when completed
    ul.list-group
        li.list-group-item(ng-repeat='file in playlistfiles')
            span(ng-if="file.filename == 'default'", ng-bind="file.filename")
            form.row(ng-if="file.filename != 'default'")
                .form-group
                    .input-group.col-xs-10
                        input.form-control(type='text', ng-model='file.filename')
                        span.input-group-addon(title='Rename {{file.filename}}', ng-click='rename(file.filename, $index)')
                            a.glyphicon.glyphicon-ok.btn-link(type='button', style='text-decoration:none;')
                    span.col-xs-2(title='Delete {{file.filename}}')
                        a.glyphicon.glyphicon-remove.btn-link(type='button', ng-click='delete(file.filename)', style='text-decoration:none;margin-top:6px')
